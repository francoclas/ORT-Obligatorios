@using Biblioteca.Clases
@model Biblioteca.Partido

@{
    ViewData["Title"] = "VistaDetallesPartidoCerrado";
}

<h1>Detalles de partido @Model.SalResena()</h1>

<div>
    <h4>Partido</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPartido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPartido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SeleccionLocal.Pais.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeleccionLocal.Pais.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SeleccionVisitante.Pais.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SeleccionVisitante.Pais.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FechaPartido)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaPartido)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Resultado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Resultado)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ganador)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ganador)
        </dd>
    </dl>
</div>

<div>
<h2>Seleccion Local</h2>
        <table>
            <thead>  
               <tr>
                   <th>Nombre</th>
                   <th>Jugadores</th>
               </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(model => model.SeleccionLocal.Pais.Nombre)</td>
                    <td>@Html.DisplayFor(model => model.SeleccionLocal.Jugadoressalida)</td>
                </tr>
            </tbody>
        </table>
        <hr />
        <br>
<hr />
</div>

<div>
    <h2>Seleccion visitante</h2>
        <table>
            <thead>
               <tr>
                   <th>Nombre</th>
                   <th>Jugadores</th>
               </tr>
            </thead>
            <tbody>
                <tr>
                <td>@Html.DisplayFor(model => model.SeleccionVisitante.Pais.Nombre)</td>
                <td>@Html.DisplayFor(model => model.SeleccionVisitante.Jugadoressalida)</td>
                </tr>
            </tbody>
        </table>
<hr />
</div>
<div>
    
    <h2>Lista de incidencias</h2>
    <table>
        <thead>
            <tr>
                <th>Seleccion</th>
                <th>Jugador</th>
                <th>Minuto</th>
                <th>Descripcion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ListaIncidencias)
                {
                    <tr>
                        <td>@Model.ObtenerSeleccion(item.JugadorInci)</td>
                        <td>@item.JugadorInci.NomCompleto</td>
                        <td>@item.Minuto</td>
                        <td>@item.Desc</td>
                    </tr>
                }
        </tbody>
    </table>


</div>
