
@using Microsoft.AspNetCore.Http;
@{
    ViewData["Title"] = "Registro";
}


<h1>Registro de nuevo usuario </h1>
@{
    if (ViewBag.TipoMensaje == "Error")
    {
        <div class="alert alert-danger" role="alert">@ViewBag.Mensaje</div>
    }
}
<hr />


<div class="row">

    <form action="Registro" method="Post">
        <label for="nom">Ingrese su nombre</label>
        <input type="text" name="nom" /> <br>

        <label for="apellido">Ingrese su apellido</label>
        <input type="text" name="ape" /> <br>

        <label for="correo">Ingrese su correo</label>
        <input type="text" name="correo" />

        <p>Los siguientes campos son sus credenciales de acceso</p>

        <label for="user">Ingrese su usuario</label>
        <input type="text" name="user" /><br>

        <label for="pass">Ingrese su contraseña</label>
        <input type="password" name="pass" /> <br>

        <button type="submit">Registrarse</button>

    </form>
</div>
