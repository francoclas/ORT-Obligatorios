@model Cliente.Models.Cabana

@{
    ViewData["Title"] = "BuscarMantFecha";
   var s = TempData["Error"];
}

<h1>BuscarMantFecha</h1>
@if(s != null)
{
    <p>@s.ToString()</p>
}
<div>
    <h4>Cabana</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Desc)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Desc)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HayJacuzzi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HayJacuzzi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HayReserva)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HayReserva)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NumHabitacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumHabitacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CantPersMax)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CantPersMax)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Foto)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Foto)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.tipoCabId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.tipoCabId)
        </dd>
    </dl>
</div>
<div>
    <p>
        @ViewBag.Error
    </p>
    <form asp-action="BuscarMantFecha" method="post">
        <input type="hidden" name="IdCab" value="@Model.id"
        <Div>
            <label>Seleccione la primera fecha</label>
            <input type="date" name="F1" />
        </Div>
       |
        <Div>
            <label>Seleccione la segunda fecha</label>
            <input type="date" name="F2" />
        </Div>
        <input type="submit" value="Buscar" />
    </Form>

</div>
